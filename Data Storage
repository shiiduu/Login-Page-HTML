<?php

$filename = "users.txt";
$users = file($filename, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);

$username = $_POST["username"];
$password = $_POST["password"];
$loggedin = false;
foreach ($users as $user) {
  list($stored_username, $stored_password) = explode(":", $user);
  if ($username == $stored_username && $password == $stored_password) {
    $loggedin = true;
    break;
  }
}

if ($loggedin) {
  echo "Du bist jetzt eingelogged";
} else {
  echo "Dein Username oder Passwort ist falsch";
}
?>
